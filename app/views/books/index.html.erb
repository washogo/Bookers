<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <%@books.each do |book|%>
    <tr>
      <td><%=book.title%></td>
      <td><%=book.body%></td>
      <td>
        <%=link_to 'Show',book_path(book.id)%>
        <%=link_to 'Edit',edit_book_path(book.id)%>
        <%=link_to 'Destroy','/books/{#:id}'%>
      </td>
    </tr>
    
    
    <%end%>
  </tbody>
   
</table>

<h2>New book</h2>

<%=form_with model:@book,local:true do |f|%>
  
  <div class="field">
    <h4>Title</h4>
    <%=f.text_field :title%>
  </div>
  <div class="field">
    <h4>Body</h4>
    <%=f.text_area :body%>  
  </div>
  <div class="action">
    <%=f.submit 'Create Book'%>  
  </div>
<%end%>