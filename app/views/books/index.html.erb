<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    
  </tbody>
   
</table>
<h2>New book</h2>
<%=form_with model:@book,local:true do |f|%>
<div>
  <h4>Title</h4>
  <%=f.text_field:title%>
</div>
<div>
  <h4>Body</h4>
  <%=f.text_area:body%>
</div>
<div>
  <%=f.submit 'Create Book'%>
</div>


<%end%>